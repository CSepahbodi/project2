{{!-- user info --}}
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Profile Information</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class=" col-md-9 col-lg-9">
                <table class="table table-user-information">
                    <tbody>
                        <tr>
                            <td>First Name:</td>
                            <td>{{ user.first_name }}</td>
                        </tr>
                        <tr>
                            <td>Last Name:</td>
                            <td>{{ user.last_name }}</td>
                        </tr>
                        <tr>
                            <td>Phone #:</td>
                            <td>{{ user.phone_number }}</td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <td>Home Address:</td>
                            <td>{{ user.home_address }}</td>
                        </tr>
                        <tr>
                            <td>Preferred Pickup:</td>
                            <td>{{ user.pref_pickup }}</td>
                        </tr>
                        <tr>
                            <td>Destination:</td>
                            <td>Large Company 1</td>
                        </tr>
                        <tr>
                            <td>User Admin:</td>
                            <td>{{ user.admin }}</td>
                        </tr>
                        <tr>
                            <td>My Groups:</td>
                            {{#if user.VanGroups}}
                            {{#each user.VanGroups}}
                            <td>Van #{{ vanGroup_ID }} Route: {{ pickup_point }}</td>
                            {{/each}}
                            {{else}}
                            <td>
                                You are not a member of any groups.
                            </td>
                            {{/if}}
                        </tr>
                        <tr>
                            <td>Current Trips:</td>
                        </tr>

                        {{#if user.VanTripGroups}}
                        {{#each user.VanTripGroups}}
                        <tr>
                            {{#if VanTrip}}
                            <td>Van #{{ VanTrip.dataValues.vanGroup_ID }}:</td>
                            <td> {{formatDate VanTrip.dataValues.begin_time "long"}}</td>
                            {{else}}
                            {{/if}}
                        </tr>
                        {{/each}}
                        {{else}}
                        <td>
                            You are not a member of any groups.
                        </td>
                        {{/if}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="panel-footer">
    </div>
</div>